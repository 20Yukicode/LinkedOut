{
  "Routes": [
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "LinkedOut.Recruitment",
      "UpstreamPathTemplate": "/api/recruitment/{url}",
      "UpstreamHttpMethod": [
        "Get",
        "Post",
        "Delete",
        "Put"
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "LinkedOut.Tweet",
      "UpstreamPathTemplate": "/api/tweet/{url}",
      "UpstreamHttpMethod": [
        "Get",
        "Post",
        "Delete",
        "Put"
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "LinkedOut.User",
      "UpstreamPathTemplate": "/api/user/{url}",
      "UpstreamHttpMethod": [
        "Get",
        "Post",
        "Delete",
        "Put"
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Type": "Nacos"
    }
  }
}
